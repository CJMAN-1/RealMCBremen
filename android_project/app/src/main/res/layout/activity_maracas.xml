<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent" >
<!--우리가 구현할 레이아웃-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="fill"
    android:background="#078293"
    android:orientation="vertical"
    tools:context=".Maracas_class" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mara"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/mara1"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FragmentA"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="#ff0000"
            android:id="@+id/text1">
        </TextView>
    </LinearLayout>

</LinearLayout>


<!--오른쪽 버튼 모음-->
<LinearLayout
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:id = "@+id/top_drawer"
    android:orientation="vertical"
    android:background="#4Df0f0f0">


    <ImageButton
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:src="@drawable/button_play"
        android:id="@+id/play"
        android:layout_marginVertical="1dp"
        android:padding = "0dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:onClick="mOnClick"
        />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:src="@drawable/button_record"
        android:id="@+id/record"
        android:layout_marginVertical="1dp"
        android:padding = "0dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:onClick="mOnClick"
        />
</LinearLayout>

<!--왼쪽 버튼모음-->
<LinearLayout
    android:id="@+id/drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#4Df0f0f0"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/turned_piano"
        android:id="@+id/piano_change3"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="3dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#00000000"
        />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/guitar"
        android:id="@+id/guitar_change3"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="3dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#00000000"
        />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/maracas"
        android:id="@+id/maracas_change3"
        android:layout_marginVertical="1dp"
        android:layout_marginHorizontal="3dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#00000000"
        />
</LinearLayout>

</android.support.v4.widget.DrawerLayout>